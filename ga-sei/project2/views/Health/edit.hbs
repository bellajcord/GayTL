<main>

    <h2>Edit Health Center</h2>

    <a class="d-inline-block mt-2 mb-4" href="/health">Return To Health Center Page</a>
    <div id="edit-form" class="health-container-show">

        <form action="/health/{{health._id}}?_method=PUT" method="POST">
        
        <div class="form-group">
            <label>Name</label>
            <input class="form-control" type="text" name="name" id='name' value="{{health.name}}">
        </div>

        <div class="form-group">
            <label>Description</label>
            <input class="form-control" type="text" name="description" id='description' value="{{health.description}}">
        </div>
        
        <div class="form-group">
            <label>Location</label>
            <input class="form-control" type="text" name="location" id='location' value="{{health.location}}">
        </div>

        <div class="form-group">
            <label>Image</label>
            <input class="form-control" type="text" name="img" id='img' value="{{health.img}}">
        </div>   

        <input class="btn btn-sucess" type="submit" value="Update Health Center">
        
        </form>
    </div>

</main>