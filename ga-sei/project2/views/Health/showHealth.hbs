<main>

	<h2>You are viewing:

		{{ health.name }}

	</h2>

	<a href="/">Return to Home Page</a>

	<div class="health-container-show">
		<h2 id="health-name">

				{{ health.name }}

		</h2>

				<img src="{{ health.img }}"/>

		<br>
		<h3>Description:</h3>
			<p>

				{{ health.description }}

			</p><br>
		<h3>Location:</h3>
			<p id="location">$

				{{ health.location }} </p><br>

		</div>

		<form action="/{{ health.id }}?_method=DELETE" method="POST">
			<input type="submit" value="Delete Health Center"/>
		</form>
</main>