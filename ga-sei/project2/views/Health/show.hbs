<main>

	<a href="/health/new" class="btn btn-primary float-right mb-4">Add Health Center</a>

	<a href="/">Return to Home Page</a>

	<div class="rest-container-show">
		<table class="table">
			<thead>
				<th>Name</th>
				<th>Description</th>
				<th>Location</th>
				<th>Img</th>
			</thead>
			{{#each health}}
			<tr>
				<td>
					{{name}}
				</td>
				<td>
					{{description}}
				</td>
				<td>
					{{Location}}
				</td>
				<td>
					{{img}}
				</td>
			</tr>
			{{/each}}
		</table>

		<form action="{{ health.id }}?_method=DELETE" method="POST">
			<input type="submit" value="Delete Health Center"/>
		</form>
</main>