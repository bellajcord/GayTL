<main>

	<a href="/night/new" class="btn btn-primary float-right mb-4">Add Nightlife</a>

	<a href="/">Return to Home Page</a>

	<div class="rest-container-show">
		<table class="table">
			<thead>
				<th>Name</th>
				<th>Description</th>
				<th>Location</th>
				<th>Img</th>
			</thead>
			{{#each night}}
			<tr>
				<td>
					{{name}}
				</td>
				<td>
					{{description}}
				</td>
				<td>
					{{Location}}
				</td>
				<td>
					{{img}}
				</td>
			</tr>
			{{/each}}
		</table>

		<form action="/{{ night.id }}?_method=DELETE" method="POST">
			<input type="submit" value="Delete Nightlife"/>
		</form>
</main>