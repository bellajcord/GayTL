<main>

    <h2>Edit Restaurant</h2>

    <a class="d-inline-block mt-2 mb-4" href="/rest">Return To Restaurant Page</a>
    <div id="edit-form" class="rest-container-show">

        <form action="/rest/{{rest._id}}?_method=PUT" method="POST">
        
        <div class="form-group">
            <label>Name</label>
            <input class="form-control" type="text" name="name" id='name' value="{{rest.name}}">
        </div>

        <div class="form-group">
            <label>Description</label>
            <input class="form-control" type="text" name="description" id='description' value="{{rest.description}}">
        </div>
        
        <div class="form-group">
            <label>Location</label>
            <input class="form-control" type="text" name="location" id='location' value="{{rest.location}}">
        </div>

        <div class="form-group">
            <label>Image</label>
            <input class="form-control" type="text" name="img" id='img' value="{{rest.img}}">
        </div>   

        <input class="btn btn-sucess" type="submit" value="Update Restaurant">
        
        </form>
    </div>

</main>